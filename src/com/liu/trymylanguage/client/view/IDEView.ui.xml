<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:image field="bgImage" src="./resource/image/img01.gif" />
	<ui:style>
		@sprite .background{
				background-repeat: repeat;
				background-color: #C9CFCD;
				gwt-image: 'bgImage';
				
				
				font-family: Arial, sans-serif;
				
				font-size: 11pt;
				color: #323232;
				line-height: 1.75em;
				width:100%;
				height: 100%;
		}
		
		
		.sidebar {
			background: #FFFFFF;
			

			color: #6E6E6E;
			padding: 25px;
			margin: 10px 5px 10px 20px;
			border-bottom: solid 2px #BBC1BF;
		}
		.console {
			background: #FFFFFF;
			

			color: #6E6E6E;
			padding: 0px 25px;
			margin: 5px 20px 10px 5px;
			border-bottom: solid 2px #BBC1BF;
		}
		
		
	</ui:style>
	<g:DockLayoutPanel styleName="{style.background}">
		<g:north size="30">
			<g:HorizontalPanel>
				<g:Button ui:field="runButton">Run</g:Button>
				<g:Button ui:field="newTabButton">New Tab</g:Button>
			</g:HorizontalPanel>
		</g:north>
		<g:south size="2">
			<g:VerticalPanel></g:VerticalPanel>
		</g:south>
		<g:center>
			<g:SplitLayoutPanel>
				<g:west size="300">
					<g:HTMLPanel ui:field="tutorialArea" styleName="{style.sidebar}">
						<h1>Welcome</h1>
					</g:HTMLPanel>
					
				</g:west>
				<g:north size="500">
					
					<g:TabLayoutPanel ui:field="tabPanel" barHeight="25"  >
						
					</g:TabLayoutPanel>
				
				
				</g:north>
				<g:center>
					
					<g:HTMLPanel ui:field="consoleArea" styleName="{style.console}">
						
					
					</g:HTMLPanel>
				
				</g:center>
			</g:SplitLayoutPanel>
		
		</g:center>
	
	</g:DockLayoutPanel>
</ui:UiBinder> 