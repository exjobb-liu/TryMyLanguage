<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:image field="bgImage" src="./resource/image/img01.gif" />
	<ui:style>
		@sprite .background{
				background-repeat: repeat;
				background-color: #C9CFCD;
				gwt-image: 'bgImage';
				
				
				font-family: Arial, sans-serif;
				
				font-size: 11pt;
				color: #323232;
				line-height: 1.75em;
				width:100%;
				height: 100%;
		}
		
		
		.sidebar {
			background: #FFFFFF;
			

			color: #6E6E6E;
			
			margin: 10px 5px 10px 20px;
			
			border-bottom: solid 2px #BBC1BF;
		}
		.console {
			background: #FFFFFF;
			

			color: #6E6E6E;
			padding: 0 4px 4px 0;
			margin: 5px 20px 10px 5px;
			border-bottom: solid 2px #BBC1BF;
		}
		
		
	</ui:style>
	<g:SimpleLayoutPanel styleName="{style.background}">
		
		
			<g:SplitLayoutPanel>
				<g:west size="300">
					<g:SimplePanel styleName="{style.sidebar}" ui:field="tutorialArea"></g:SimplePanel>
					
				</g:west>
				<g:north size="400">
					<g:LayoutPanel>
						<g:layer top="10px" height="25px">
						<g:HorizontalPanel>
							<g:Button ui:field="runButton">Run</g:Button>
							<g:Button ui:field="newTabButton">New Tab</g:Button>
							<g:Button ui:field="renameButton">Rename</g:Button>
						</g:HorizontalPanel>
						</g:layer>
						<g:layer top="35px" bottom="0px">
						<g:TabLayoutPanel ui:field="tabPanel" barHeight="31"  height="100%">
							
						</g:TabLayoutPanel>
						</g:layer>
					
					</g:LayoutPanel>
				</g:north>
				<g:center>
					
					<g:SimplePanel ui:field="consoleArea" styleName="{style.console}" >
						
					
					</g:SimplePanel>
				
				</g:center>
			</g:SplitLayoutPanel>
		
		
	
	</g:SimpleLayoutPanel>
</ui:UiBinder> 